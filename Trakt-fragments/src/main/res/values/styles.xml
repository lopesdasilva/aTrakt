<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="listview">
        <item name="android:dividerHeight">1dp</item>

        <item name="android:divider">#686868</item>
    </style>

    <style name="nowCardStyle2small">
        <item name="android:background">@drawable/bg_selected</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="nowCardStyle2small.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="nowCardStyle">
        <item name="android:background">@drawable/bg_selected</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>
    <style name="nowCardStyle2">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>
    <style name="nowCardStyle.Smaller">

        <item name="android:minHeight">100dp</item>
        </style>
    <style name="nowCardStyle.Smallest">

    </style>

    <style name="nowCardStyle.center">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="CardText">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text</item>
    </style>
    <style name="CardText.1Line.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="CardText.1Line.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardText.1Line">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="CardText.2Line">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="CardText.1Line">
        <item name="android:textSize">@dimen/card_small_text</item>
        </style>
    <style name="CardText.1Line.Bigger">
        <item name="android:textSize">@dimen/card_medium_text</item>
    </style>
    <style name="CardText.1Line.Bigger.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="CardText.1Line.Bigger.White">
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardText.2lines">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardText.5lines">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>


        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Item.Top">
        <item name="android:textColor">@color/card_text</item>
        <!--         <item name="android:background">#eeeeee</item> -->
    </style>

    <style name="Item.Sticky">
        <!--         <item name="android:background">#eeeeee</item> -->
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/card_text</item>
    </style>

    <style name="Item.Sticky.1Line">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Item.Sticky.1Line.Left">

        <item name="android:gravity">left</item>
    </style>
    <style name="Item.Sticky.1Line.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AllCaps">
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CardTitleBold" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CardTitleBold.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardTitleBold.Blue">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="CardTitleBold.1Lines">
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardTitleBold.2Lines">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardTitle" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="CardTitle.1line">

        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardTitle.1line.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>


    <style name="frame_list_shows">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ShowTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">#FF33B5E5</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Element_Spacing">
        <!--<item name="android:layout_marginLeft">5dp</item>-->
        <!--<item name="android:layout_marginRight">5dp</item>-->
        <item name="android:layout_marginBottom">5dp</item>
        <item  name="android:background">@drawable/card_selector</item>
    </style>
    <style name="CardSmall">
              <item  name="android:background">@drawable/card_back_temp</item>
    </style>

    <style name="card_outer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/card_outer_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_outer_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_outer_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_outer_padding_horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="card_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_inner_padding_vertical</item>
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="card_thumbnail">
        <item name="android:layout_width">@dimen/card_thumbnail</item>
        <item name="android:layout_height">@dimen/card_thumbnail</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">@dimen/card_thumbnail_margin</item>
    </style>

    <style name="card_title_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
    </style>

    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@android:id/button1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="card_popup_anchor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/card_menu_button</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="ratingAdvance" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_full_holo_light</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressDrawable">@drawable/apptheme_ratingbar_full_holo_light</item>
    </style>
</resources>