<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/imageViewResources"
    android:orientation="vertical"
    style="@style/nowCardStyle.Smaller">

    <ImageView
        android:id="@+id/imageViewCommentAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:adjustViewBounds="true"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/textViewCommentDate"
        android:gravity="right"
        style="@style/Item.Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mar 31, 2013 7:21 AM"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/imageViewCommentAvatar"
        android:layout_alignRight="@+id/textViewCommentUsername"
        android:layout_toRightOf="@+id/imageViewCommentAvatar"
        android:paddingRight="6dp"/>

    <TextView
        android:id="@+id/textViewCommentUsername"
        android:gravity="right"
        style="@style/CardTitleBold.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewCommentDate"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/imageViewCommentAvatar"
        android:paddingRight="6dp"/>


    <TextView
        android:id="@+id/textViewCommentText"
        style="@style/CardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="Lorem ipsum"
        android:layout_below="@+id/imageViewCommentAvatar"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/imageViewSpoiler"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/spoiler"
        android:visibility="gone"/>

</RelativeLayout>

