<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Trending Movies"
        android:gravity="center_vertical"
        style="@style/CardTitle.1line"
        android:id="@+id/textViewMoviesTrendingLabel"
        android:layout_below="@+id/viewTrendingShows"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_alignParentRight="true"
        android:paddingLeft="2dp"/>

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:text="See More"
        android:id="@+id/buttonMoviesSeeMore"
        android:layout_below="@+id/viewTrendingShows"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:layout_below="@+id/textViewMoviesTrendingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutMovies"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:dividerPadding="10dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:id="@+id/progressBarMovies"/>
    </LinearLayout>

</RelativeLayout>